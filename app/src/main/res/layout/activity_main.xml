<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="0.0/0.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_location" android:layout_marginTop="200dp"
                android:textColor="#4CAF50" android:textSize="24sp" android:gravity="center_horizontal"/>
        <Button
                android:text="START UPDATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_start_update"
                android:layout_marginTop="60dp" android:background="#F093B2"/>
        <Button
                android:text="STOP UPDATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_stop_update" android:background="#F093B2"
                android:layout_marginTop="10dp" android:enabled="false"/>
    </LinearLayout>
</RelativeLayout>